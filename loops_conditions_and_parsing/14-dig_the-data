#!/usr/bin/env bash
# This script groups visitors by IP and HTTP status code, displaying the number of occurrences in descending order.

# Extract IP and HTTP status code, sort, count occurrences, and then sort by occurrence in descending order.
grep -oP '(\d{1,3}\.){3}\d{1,3} \d{3}' apache_log_file.log | \
  sort | uniq -c | sort -rn | \
  awk '{print $1, $2, $3}'

